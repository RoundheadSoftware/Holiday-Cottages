@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
    @{ 
        IPublishedContent root = Model.Content.AncestorOrSelf(1);
        string textWidgetTitle = Model.Content.GetPropertyValue<string>(Core.Constants.DocumentTypes.Sidebar.Title);
        if (string.IsNullOrEmpty(textWidgetTitle))
        {
            textWidgetTitle = root.GetPropertyValue<string>(Core.Constants.DocumentTypes.Sidebar.Title);
        }
        string textWidgetBody = Model.Content.GetPropertyValue<string>(Core.Constants.DocumentTypes.Sidebar.Text);
        if (string.IsNullOrEmpty(textWidgetBody))
        {
            textWidgetBody = root.GetPropertyValue<string>(Core.Constants.DocumentTypes.Sidebar.Text);
        }
    }
<aside id="free-to-book" class="free-to-book-widget">
    <div class="textwidget">
        <div>
            <p style="background-color:#9bbe4b;padding-left:10px;"><strong><a style="font-size:1.2em;color:#000000;" href="https://www.freetobook.com/affiliates/reservation.php?w_id=29949&amp;w_tkn=XMSgzS1oNWAYJLZQQapZrw2Axiw2MvsYhHVb3hpxOJgwGAM6U4097HPMTNWWz" target="_blank" rel="noopener">Check Availability and Book Here</a></strong></p>
            <div>
                <p style="background-color:#A3A3A3;padding-left:10px;">
                    <span style="color:#000;font-weight:bold;">Note: Saturday arrival / departure</span>
                </p>
            </div>
        </div>
    </div>
</aside>
@if (!string.IsNullOrEmpty(textWidgetTitle) || !string.IsNullOrEmpty(textWidgetBody))
{
<aside id="text" class="text-widget">
    <h3>@textWidgetTitle</h3>
    <div class="textwidget">
        @Html.Raw(textWidgetBody)
    </div>
</aside>
}
@if (@root.GetPropertyValue<bool>(Core.Constants.DocumentTypes.Sidebar.ShowFacebookPage))
{
<aside id="facebook" class="facebook-widget">
    <h4>@root.GetPropertyValue(Core.Constants.DocumentTypes.Sidebar.FacebookIntroduction)</h4>
    <div class="fb-page" data-href="@root.GetPropertyValue(Core.Constants.DocumentTypes.Sidebar.FacebookPageURL)"
         data-tabs="timeline" data-small-header="false"
         data-adapt-container-width="true" data-hide-cover="false"
         data-show-facepile="true">
        <blockquote cite="@root.GetPropertyValue(Core.Constants.DocumentTypes.Sidebar.FacebookPageURL)"
                    class="fb-xfbml-parse-ignore">
            <a href="@root.GetPropertyValue(Core.Constants.DocumentTypes.Sidebar.FacebookPageURL)">
                @root.GetPropertyValue(Core.Constants.DocumentTypes.Sidebar.FacebookPageName)
            </a>
        </blockquote>
    </div>
</aside>
}
@if (@root.GetPropertyValue<bool>(Core.Constants.DocumentTypes.Sidebar.ShowGoogleTranslate))
{
    <aside id="translate" class="google-translate-widget">
        <h4>@root.GetPropertyValue(Core.Constants.DocumentTypes.Sidebar.GoogleTranslateIntroduction)</h4>
        <div id="google_translate_element"></div>
    </aside>
}